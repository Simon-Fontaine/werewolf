{
  "private": true,
  "name": "werewolf",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:database\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:database": "npm run dev -w @werewolf/database",
    "dev:backend": "npm run dev -w @werewolf/backend",
    "dev:frontend": "npm run dev -w @werewolf/frontend",
    "build": "npm run build:database && npm run build:backend && npm run build:frontend",
    "build:database": "npm run build -w @werewolf/database",
    "build:backend": "npm run build -w @werewolf/backend",
    "build:frontend": "npm run build -w @werewolf/frontend",
    "clean": "npm run clean --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "typecheck:backend": "npm run typecheck -w @werewolf/backend",
    "typecheck:frontend": "npm run typecheck -w @werewolf/frontend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:backend": "npm run lint -w @werewolf/backend",
    "lint:frontend": "npm run lint -w @werewolf/frontend",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test -w @werewolf/backend",
    "test:frontend": "npm run test -w @werewolf/frontend",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "fix": "npm run lint:fix && npm run format",
    "validate": "npm run clean && npm run build && npm run typecheck && npm run lint",
    "db:migrate": "npm run db:migrate -w @werewolf/database",
    "db:push": "npm run db:push -w @werewolf/database",
    "db:studio": "npm run db:studio -w @werewolf/database",
    "db:reset": "npm run db:reset -w @werewolf/database"
  },
  "keywords": [],
  "author": "Simon Fontaine",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.5.3"
  }
}
